<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pl.mzap.headache.MainActivity">

    <TextView
        android:id="@+id/date_header_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Sr, 27 Luty"
        android:textAlignment="center"
        android:textColor="@color/accent"
        android:textSize="@dimen/date_header_text_size" />

    <TextView
        android:id="@+id/time_header_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15:15"
        android:textAlignment="center"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/time_header_text_size" />

    <include layout="@layout/view_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp" />

    <TextView
        android:id="@+id/intro_header_rating_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/main_headache_label"
        android:textAlignment="center"
        android:textColor="@color/secondary_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_header_label" />

    <RatingBar
        android:id="@+id/rating_bar_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:numStars="5"
        android:stepSize="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intro_header_rating_bar"
        tools:ignore="ObsoleteLayoutParam" />

    <ProgressBar
        android:id="@+id/progress_bar_header"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating_bar_header" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/history_headache_label"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/primary_text_size" />


</LinearLayout>