<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/headache_view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/accent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:text="@string/item_remove_headache"
            android:textColor="#fff"
            android:textSize="13sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/headache_row_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/item_row"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/rating_image"
            android:layout_width="@dimen/item_headache_image_size"
            android:layout_height="@dimen/item_headache_image_size"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:tint="@color/accent"
            app:srcCompat="@drawable/rating_btn_1" />

        <TextView
            android:id="@+id/date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Wt, 27 Lut"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/item_date_label_size" />

        <TextView
            android:id="@+id/time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_label"
            android:text="12:45"
            android:textSize="@dimen/item_time_label_size" />

        <TextView
            android:id="@+id/rating_text_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/accent"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/rating_image"
            android:text="111" />
    </RelativeLayout>

</FrameLayout>